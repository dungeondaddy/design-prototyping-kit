.reference_colours
    display flex
    flex-direction column
    width 100%
    mt()

    &__list
        display flex
        flex-direction row
        align-items center
        justify-content flex-start
        flex-wrap wrap
        mt()
        width 100%

    &__item
        display block
        width 18.4%
        border $bw solid white

        &::after
            content ''
            display block
            width 100%
            padding-bottom 100%

        &:nth-child(n+6)
            margin-top 2%

        * + &
            margin-left 2%

.cl--interaction
    background-color $cl--interaction

    &--dark
        background-color $cl--interaction--dark

    &--low
        background-color $cl--interaction--low

    &--med
        background-color $cl--interaction--med

    &--high
        background-color $cl--interaction--high

