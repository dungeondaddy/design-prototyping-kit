// global border-width variable
$bw         = 2px
$bw--half   = ($bw / 2)
$bw--double = ($bw * 2)
$bw--triple = ($bw * 3)

// global border-radius variable
$bdrs = 2px

// global container width variable
$contain         = 1520px
$contain--wide   = ($contain * 1.5)
$contain--narrow = ($contain * .75)
