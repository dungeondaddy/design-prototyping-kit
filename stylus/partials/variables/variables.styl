// colour variables
$cl--primary         = #26a69a
$cl--primary--high   = #64d8cb
$cl--primary--low    = #00766c
$cl--secondary       = #ffd54f
$cl--secondary--high = #ffff81
$cl--secondary--low  = #c8a415
$cl--dark            = #263238
$cl--light           = #455a64
$cl--pale            = #e0f2f1

// font family variables
$ff--light   = 'neuzeit--book', sans-serif
$ff--body    = 'neuzeit--book', sans-serif
$ff--italic  = 'neuzeit--book', sans-serif
$ff--heading = 'neuzeit--book', sans-serif

// font-size variables
$ratio--sml = 1.125
$ratio--med = 1.2
$ratio--lrg = 1.333

$fz--base = 1rem

// line height variables
$lh--heading = 1.5
$lh--body    = 1.618

$sp--base             = ($fz--base * $lh--body)
$sp--base--double     = ($sp--base * 2)
$sp--base--plus-half  = ($sp--base * 1.5)
$sp--base--two-thirds = ($sp--base * .666)
$sp--base--half       = ($sp--base / 2)
$sp--base--third      = ($sp--base / 3)
$sp--base--quarter    = ($sp--base / 4)

// global border-radius variable
$bdrs = 2px
