*
*::before
*::after
    box-sizing border-box
    word-wrap break-word

body
    display flex
    flex-direction column
    align-items center
    justify-content flex-start
    min-height 100vh
    width 100%

.main_content
    width 100%

.page_content
    width 92%
    max-width 1400px
    margin 0 auto

    > *:first-child
        margin-top $sp--base--double

    > *:last-child
        margin-bottom $sp--base--double

img
    display block
    height auto
    width auto
    max-width 100%
    vertical-align bottom
