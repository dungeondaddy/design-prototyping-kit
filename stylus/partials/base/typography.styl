html
    text-rendering optimizeLegibility
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale

body
select
input
textarea
    font-family $ff--body
    font-size 1.8rem
    font-weight 400
    line-height $lh--body
    color $cl--light

h1
h2
h3
h4
    display block
    line-height $lh--heading
    font-weight 400
    font-family $ff--heading
    color $cl--dark

h1
    max-width 24em
    font-size $fz--h1

    * + &
        margin-top $sp--h1

h2
    max-width 26em
    font-size $fz--h2

    * + &
        margin-top $sp--h2

h3
    max-width 32em
    font-size $fz--h3

    * + &
        margin-top $sp--h3

h4
    max-width 38em
    font-size $fz--base

    * + &
        margin-top $sp--h3

p
    max-width 38em
    font-family $ff--body
    color $cl--light
    line-height $lh--body
    letter-spacing .2px
    font-size $fz--base

    * + &
        margin-top $sp--base

    h1 + &
    h2 + &
    h3 + &
    h4 + &
        margin-top $sp--base--half

    > a
    > a:visited
        cursor pointer
        position relative
        text-decoration none
        color $cl--light
        box-shadow inset 0 -1px 0 $cl--primary

        &:hover
            color $cl--primary
            box-shadow 0

a
a:visited
    trans(.14s)
    cursor pointer
    text-decoration none

b
strong
    font-weight 500
    font-family $ff--heading

i
em
    font-style italic
