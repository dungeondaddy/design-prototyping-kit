html
    text-rendering optimizeLegibility
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale

body
select
input
textarea
    font-family $ff--body
    font-size 1.8rem
    font-weight 400
    line-height $lh--body
    color $cl--light

h1
h2
h3
h4
    display block
    line-height $lh--heading
    font-weight 400
    font-family $ff--heading
    color $cl--dark

h1
    max-width 115rem
    font-size $fz--h1

    * + &
        margin-top $vs--h1

h2
    max-width 93rem
    font-size $fz--h2

    * + &
        margin-top $vs--h2

h3
    max-width 67rem
    font-size $fz--h3

    * + &
        margin-top $vs--h3

h4
    max-width 60rem
    font-size $fz--base

    * + &
        margin-top $vs--h3

p
    max-width 60rem
    font-family $ff--body
    color $cl--light
    line-height 1.6
    letter-spacing .2px
    font-size 1.8rem

    * + &
        margin-top $vs--base

    h1 + &
    h2 + &
    h3 + &
    h4 + &
        margin-top $vs--base--half

    > a
    > a:visited
        cursor pointer
        position relative
        text-decoration none
        color $cl--light
        box-shadow inset 0 -1px 0 darken($cl--pale, 40%)

        &:hover
            color $cl--light
            box-shadow inset 0 -8px 0 darken($cl--pale, 5%)

a
a:visited
    trans(.14s)
    cursor pointer
    text-decoration none

b
strong
    font-weight 500
    font-family $ff--heading

i
em
    font-style italic
