// colour variables
$cl--blue--low   = #4164aa
$cl--blue--mid   = #3e72c6
$cl--blue--high  = #4e91f2
$cl--blue--light = #c2d5f2
$cl--red--low    = #7f3b52
$cl--red--mid    = #aa3a65
$cl--red--high   = #d3447f
$cl--red--light  = #e2bac7
$cl--dark        = #242731
$cl--light       = #3b3f49
$cl--pale        = #f3f8f9

// font family variables
$ff--light   = 'Quicksand', sans-serif
$ff--body    = 'Quicksand', sans-serif
$ff--italic  = 'Quicksand', sans-serif
$ff--heading = 'Quicksand', sans-serif

// font-size variables calculated here:
// http://www.modularscale.com/?18&px&1.5
$fz--h1   = 6.075rem
$fz--h2   = 4.05rem
$fz--h3   = 2.7rem
$fz--base = 1.8rem
$fz--sub  = 1.2rem

// line height variables
$lh--heading = 1.5
$lh--body    = 1.618

// vertical spacing variables
$vs--h1               = ($fz--h1 * $lh--heading)
$vs--h2               = ($fz--h2 * $lh--heading)
$vs--h3               = ($fz--h3 * $lh--heading)
$vs--base             = ($fz--base * $lh--body)
$vs--base--double     = ($vs--base * 2)
$vs--base--plus-half  = ($vs--base * 1.5)
$vs--base--two-thirds = ($vs--base * .666)
$vs--base--half       = ($vs--base / 2)
$vs--base--third      = ($vs--base / 3)
$vs--base--quarter    = ($vs--base / 4)
$vs--sub              = ($fz--sub * $lh--body)

// global border-radius variable
$bdrs = 2px
